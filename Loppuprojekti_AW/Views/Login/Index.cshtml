@model Loppuprojekti_AW.Models.Enduser

@{
    ViewData["Title"] = "View";
}

<h1>Login</h1>
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kirjaudu" class="btn btn-outline-primary" />
                </div>
            </form>
        }
        @Html.ActionLink("Rekisteröidy", "Index", "Home", new { @class = "btn btn-outline-primary" })


    </div>
    <div class="leipäteksti">
        @if (ViewBag.AuthOK == false)
        {
            <p class="alert alert-danger" role="alert">Salasana tai käyttäjätunnus väärin<br />Yritä uudelleen</p>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
