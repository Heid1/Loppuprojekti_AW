@model IEnumerable<Loppuprojekti_AW.Models.Sport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="accordion" id="accordionSport">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header" id="headingSport">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#@item.Sportname" aria-expanded="false" aria-controls="@item.Sportname">
                        @item.Sportname
                    </button>
                </h2>
            </div>
            <div id="@item.Sportname" class="collapse" aria-labelledby="headingSport" data-parent="#accordionSport">
                <div class="card-body">
                    @item.Description
                </div>
            </div>
        </div>
    }
</div>

