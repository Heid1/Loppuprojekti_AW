@model IEnumerable<Loppuprojekti_AW.Models.Sport>

@{
    ViewData["Title"] = "Lajit";
}

<h1>Lajit</h1>

@using Microsoft.AspNetCore.Http;
@if (Context.Session.GetString("userrole") == "admin")
{
    <p>
        <a asp-action="Create">Luo uusi laji</a>
    </p>
}
else
{
    <p>
        <a asp-action="SendFeedback" asp-controller="Home">Ehdota uutta lajia</a>
    </p>
}


<div class="accordion" id="accordionSport">
    @foreach (var item in Model)
    {
        var iditem = String.Join("", item.Sportname.Split(' '));
        <div class="card">
            <div class="card-header" id="headingSport">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#@iditem" aria-expanded="false" aria-controls="@iditem">
                        @item.Sportname
                    </button>
                </h2>
            </div>
            <div id="@iditem" class="collapse" aria-labelledby="headingSport" data-parent="#accordionSport">
                <div class="card-body">
                    @*@if (Viewbag.IsChosen)
                    {
                        Html.ActionLink("Poista suosikeita")
                    }*@
                    @Html.ActionLink("Valitse suosikkeihin", "ChooseSport", "Sport", new { sportid = item.Sportid })<br />
                    @item.Description
                </div>
            </div>
        </div>
    }
</div>

