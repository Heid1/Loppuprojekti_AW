<h1>Avoin chatti</h1>
<h2 id="userNameHeading" hidden>@ViewBag.userName</h2>
<div class="container py-5 px-4">

    @*<div class="row rounded-lg overflow-hidden shadow">*@


    <!-- Chat Box-->

    <div class="col-7 px-0 rounded-lg overflow-hidden shadow" id="chatArea">
        <div @*class="px-4 py-5 chat-box bg-white"*@ class="px-4 chat-box py-5 bg-white" id="chat-area">
            <div id="chatBox">
            </div>

            <!-- Typing area -->
            <form action="#" class="bg-light" id="typingArea">
                <div class="input-group">
                    <input type="text" id="messageInput" placeholder="Kirjoita viesti" class="form-control rounded-0 border-0 py-4 bg-light">
                    @*<input type="text" id="messageInput" placeholder="Kirjoita viesti" aria-describedby="button-addon2" class="form-control rounded-0 border-0 py-4 bg-light">*@
                    <div class="input-group-append">
                        <input id="sendButton" type="button" value="Lähetä" class="btn btn-primary" />
                        @*<button id="sendButton" type="button" value="Send Message" class="btn btn-link"> <i class="fa fa-paper-plane"></i></button>*@
                        <!-- id="button-addon2" type="submit" -->
                    </div>
                </div>
            </form>
        </div>
    </div>
    @*</div>*@
</div>


<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/OpenChat.js"></script>