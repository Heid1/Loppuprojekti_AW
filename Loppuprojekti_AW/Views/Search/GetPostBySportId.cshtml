@model Loppuprojekti_AW.Models.Post;
@{
}

<div class="text-center">
    <h2 class="display-4">Hae ilmoituksia lajeittain</h2>
</div>

@if (ViewBag.Posts != null)
    {
<div class="accordion" id="accordionPost">
    
    @foreach (var item in ViewBag.Posts)
    {
    var iditem = String.Join("", item.Postname.Split(' '));
    <div class="card">
        <div class="card-header" id="headingPost">
            <h2 class="mb-0">
                <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#@iditem" aria-expanded="false" aria-controls="@iditem">
                    @item.Postname
                </button>
            </h2>
        </div>
        <div id="@iditem" class="collapse" aria-labelledby="headingPost" data-parent="#accordionPost">
            <div class="card-body">
                <p>@item.Postname | @item.Description | @item.Place | @item.Date | @item.Duration | @item.Price | @item.Sport.Sportname</p>
            </div>
        </div>
    </div>
    }
</div>
    } else {
    @*@ViewBag.Alert;*@
    }
