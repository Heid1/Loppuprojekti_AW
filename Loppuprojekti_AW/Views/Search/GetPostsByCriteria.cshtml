@model Loppuprojekti_AW.Models.Post;
@{
    ViewData["Title"] = "Hae ilmoituksia";
}

<h3>Hae ilmoituksia</h3>
<form action="GetPostsByCriteria" method="post">
    <input type="text" name="criteria" value="" />
    <input type="submit" value="Hae" />
</form>

@if (ViewBag.Posts != null)
{
    <div class="accordion" id="accordionPost">
        @foreach (var item in ViewBag.Posts)
        {
            var iditem = String.Join("", item.Postname.Split(' '));
            <div class="card">
                <div class="card-header" id="headingPost">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#@iditem" aria-expanded="false" aria-controls="@iditem">
                            @item.Postname
                        </button>
                    </h2>
                </div>
                <div id="@iditem" class="collapse" aria-labelledby="headingSport" data-parent="#results">
                    <div class="card-body">
                        <p>@item.Postname | @item.Description | @item.Place | @item.Date | @item.Duration | @item.Price | @item.Sport</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    @*@ViewBag.Alert;*@
}
